# =====================================================
# CONFIGURACIÓN PARA VPS HOSTINGER (PRODUCCIÓN CLOUD)
# =====================================================

# ENTORNO
ENVIRONMENT=PRODUCTION_CLOUD

# =====================================================
# BASE DE DATOS
# =====================================================
# IMPORTANTE: Cambia estos valores después de crear la BD en el VPS
DB_HOST=localhost
DB_NAME=restaurante_db
DB_USER=restaurante_user
DB_PASS=CAMBIAR_POR_PASSWORD_SEGURO

# =====================================================
# ADMINISTRACIÓN
# =====================================================
ADMIN_EMAIL=globaltekhnologii@gmail.com

# =====================================================
# SEGURIDAD
# =====================================================
# Sesiones seguras (HTTPS)
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# CSRF Protection
CSRF_ENABLED=true

# =====================================================
# SINCRONIZACIÓN
# =====================================================
# Habilitar sistema de sincronización con restaurantes
SYNC_ENABLED=true

# Este es el servidor maestro (no está en modo offline)
OFFLINE_MODE=false

# URL de este servidor (cambiar por la IP del VPS)
MASTER_SERVER_URL=http://TU_IP_VPS

# =====================================================
# INTEGRACIONES DE PAGO
# =====================================================
# Bold Payment Gateway
BOLD_API_KEY=
BOLD_ENVIRONMENT=production

# Mercado Pago
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# =====================================================
# CHATBOT IA
# =====================================================
# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI GPT
OPENAI_API_KEY=

# =====================================================
# BACKUPS
# =====================================================
# Directorio de backups
BACKUP_DIR=/root/backups

# Retención de backups (días)
BACKUP_RETENTION_DAYS=7

# =====================================================
# LOGS
# =====================================================
# Nivel de logs: debug, info, warning, error
LOG_LEVEL=warning

# Directorio de logs
LOG_DIR=/var/log/restaurante

# =====================================================
# RENDIMIENTO
# =====================================================
# Cache habilitado
CACHE_ENABLED=true

# Tiempo de cache (segundos)
CACHE_TTL=3600

# =====================================================
# NOTIFICACIONES
# =====================================================
# Email para notificaciones del sistema
NOTIFICATION_EMAIL=globaltekhnologii@gmail.com

# =====================================================
# ZONA HORARIA
# =====================================================
TIMEZONE=America/Bogota
