# =====================================================
# PLANTILLA DE CONFIGURACIÓN
# =====================================================
# Copia este archivo y renómbralo según tu entorno:
# - .env.cloud (para VPS en la nube)
# - .env.local (para instalaciones en restaurantes)
# - .env (para desarrollo local)

# =====================================================
# ENTORNO
# =====================================================
# Valores posibles: DEVELOPMENT, PRODUCTION_CLOUD, PRODUCTION_LOCAL
ENVIRONMENT=DEVELOPMENT

# =====================================================
# BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_NAME=nombre_base_datos
DB_USER=usuario_base_datos
DB_PASS=password_seguro_aqui

# =====================================================
# ADMINISTRACIÓN
# =====================================================
ADMIN_EMAIL=tu_email@ejemplo.com

# =====================================================
# SEGURIDAD
# =====================================================
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax
CSRF_ENABLED=true

# =====================================================
# SINCRONIZACIÓN (Solo para instalaciones en restaurantes)
# =====================================================
SYNC_ENABLED=false
OFFLINE_MODE=false
MASTER_SERVER_URL=http://ip_del_vps

# =====================================================
# INTEGRACIONES DE PAGO (Opcional)
# =====================================================
BOLD_API_KEY=
BOLD_ENVIRONMENT=sandbox
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# =====================================================
# CHATBOT IA (Opcional)
# =====================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# =====================================================
# BACKUPS
# =====================================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# =====================================================
# LOGS
# =====================================================
LOG_LEVEL=debug
LOG_DIR=./logs

# =====================================================
# RENDIMIENTO
# =====================================================
CACHE_ENABLED=false
CACHE_TTL=3600

# =====================================================
# NOTIFICACIONES
# =====================================================
NOTIFICATION_EMAIL=tu_email@ejemplo.com

# =====================================================
# ZONA HORARIA
# =====================================================
TIMEZONE=America/Bogota
